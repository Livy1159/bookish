<h1>Welcome <%= @user.name %>!</h1>


<a class="new-book-button" href="/users/<%= @user.id %>/books/new">
  <button id="add-book-button">Add a book!</button>
</a>

<div class="book-list">
  <% @books.each do |book| %>
    <%= erb :"books/_list_book", locals: { book: book } %>
  <% end %>
</div>

<form action="/sessions" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Logout">
</form>
<div id="book-form-holder"></div>

